# WBABD systemd environment example (internal/private)
WBABD_AUTH_MODE=token
WBABD_API_TOKEN_FILE=/etc/wbabd/token.txt
WBABD_AUTHZ_POLICY_FILE=/etc/wbabd/authz-policy.json
WBABD_PRINCIPAL=wbabd-systemd
WBABD_TLS_CERT_FILE=/etc/wbabd/pki/server.crt.pem
WBABD_TLS_KEY_FILE=/etc/wbabd/pki/server.key.pem
WBABD_TLS_CLIENT_CA_FILE=/etc/wbabd/pki/ca.crt.pem
WBABD_HTTP_MAX_BODY_BYTES=1048576
WBABD_HTTP_REQUEST_TIMEOUT_SECS=15
WBABD_PREFLIGHT_AUDIT_WINDOW=50
WBABD_AUDIT_LOG_PATH=/var/lib/wbab/agent-sandbox/state/audit-log.sqlite
WBABD_STORE_PATH=/var/lib/wbab/agent-sandbox/state/core-store.sqlite
