# WBABD container environment example (internal/private)
WBABD_AUTH_MODE=token
WBABD_API_TOKEN_FILE=/run/wbabd/token.txt
WBABD_AUTHZ_POLICY_FILE=/run/wbabd/authz-policy.json
WBABD_PRINCIPAL=wbabd-container
WBABD_TLS_CERT_FILE=/run/wbabd/pki/server.crt.pem
WBABD_TLS_KEY_FILE=/run/wbabd/pki/server.key.pem
WBABD_TLS_CLIENT_CA_FILE=/run/wbabd/pki/ca.crt.pem
WBABD_HTTP_MAX_BODY_BYTES=1048576
WBABD_HTTP_REQUEST_TIMEOUT_SECS=15
WBABD_PREFLIGHT_AUDIT_WINDOW=50
WBABD_AUDIT_LOG_PATH=/workspace/.wbab/audit-log.jsonl
WBABD_STORE_PATH=/workspace/.wbab/core-store.json
